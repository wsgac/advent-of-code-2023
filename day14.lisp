(defun parse-data (data)
  "Parse DATA as a list of rows and then transpose it so that north is to
the left."
  (mapcar (alexandria:rcurry #'coerce 'string)
	  (transpose (mapcar (alexandria:rcurry #'coerce 'list)
			     (split-lines data)))))

